<BorderPane styleClass="root-pane"
            stylesheets="@style.css"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.MainController">
    <!--    <top>-->
    <!--        <ToolBar styleClass="top-bar">-->
    <!--            <Text styleClass="app-title" text="Investment Portfolio" />-->
    <!--            <Text styleClass="app-subtitle" />-->
    <!--        </ToolBar>-->
    <!--    </top>-->
    <center>
        <GridPane alignment="TOP_CENTER" hgap="20" vgap="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!--        TOP BOX DE PORTAFOLIOS        -->
            <VBox prefHeight="312.0" prefWidth="289.0" styleClass="card" GridPane.columnIndex="0" GridPane.rowIndex="0">
                <Label prefHeight="28.0" prefWidth="189.0" styleClass="header-text" text="Portafolios" />
                <ComboBox fx:id="portafolioSelector" maxWidth="Infinity" prefWidth="245.0" promptText="Seleccionar portafolio" styleClass="combo-box">
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                </ComboBox>
                <TextField fx:id="nombrePortafolio" maxWidth="Infinity" prefWidth="245.0" promptText="Nombre del portafolio" styleClass="text-input">
                    <VBox.margin>
                        <Insets bottom="5.0" top="30.0" />
                    </VBox.margin>
                </TextField>
                <Button maxWidth="Infinity" onAction="#crearPortafolio" prefWidth="245.0" styleClass="button-primary" text="Nuevo Portafolio">
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </Button>
                <Button maxWidth="Infinity" onAction="#eliminarPortafolio" prefWidth="245.0" styleClass="button-delete" text="Eliminar Portafolio">
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin>
                </Button>
            </VBox>

            <!--        TOP BOX DE RENDIMIENTOS TOTALES         -->
            <HBox spacing="20" styleClass="card" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <VBox prefHeight="312.0" prefWidth="746.0" HBox.hgrow="ALWAYS">
                    <Label prefHeight="28.0" prefWidth="554.0" styleClass="header-text" text="Beneficio total" />
                    <GridPane alignment="CENTER" hgap="20" vgap="20">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
                            <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0" />
                        </columnConstraints>

                        <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="total-box">
                            <StackPane styleClass="img-box">
                                <SVGPath content="M18 8.5V8.35417C18 6.50171 16.4983 5 14.6458 5H9.5C7.567 5 6 6.567 6 8.5C6 10.433 7.567 12 9.5 12H14.5C16.433 12 18 13.567 18 15.5C18 17.433 16.433 19 14.5 19H9.42708C7.53436 19 6 17.4656 6 15.5729V15.5M12 3V21"
                                         fill="#e6f3f7" stroke="#0891b2" scaleX="1.5" scaleY="1.5"/>
                            </StackPane>

                            <VBox styleClass="totales-box">
                                <Label text="Total en Pesos" styleClass="label-total" />
                                <Label fx:id="totalPesosLabel" styleClass="label-info" />
                            </VBox>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="rend-box">
                            <StackPane styleClass="img-box">
                                <ImageView fitHeight="40" fitWidth="40">
                                    <Image url="/assets/flecha.png" />
                                </ImageView>
                            </StackPane>
                            <VBox styleClass="totales-box">
                                <Label text="Rendimiento Pesos" styleClass="label-total" />
                                <Label fx:id="gananciaPorcentajePesosLabel" styleClass="label-ganancia" />
                            </VBox>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="total-box">
                            <StackPane styleClass="img-box">
                                <SVGPath content="M18 8.5V8.35417C18 6.50171 16.4983 5 14.6458 5H9.5C7.567 5 6 6.567 6 8.5C6 10.433 7.567 12 9.5 12H14.5C16.433 12 18 13.567 18 15.5C18 17.433 16.433 19 14.5 19H9.42708C7.53436 19 6 17.4656 6 15.5729V15.5M12 3V21"
                                         fill="#e6f3f7" stroke="#0891b2" scaleX="1.5" scaleY="1.5"/>
                            </StackPane>

                            <VBox styleClass="totales-box">
                                <Label text="Total en Dólares" styleClass="label-total" />
                                <Label fx:id="totalDolaresLabel" styleClass="label-info" />
                            </VBox>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="rend-box">
                            <StackPane styleClass="img-box">
                                <ImageView fitHeight="40" fitWidth="40">
                                    <Image url="/assets/flecha.png" />
                                </ImageView>
                            </StackPane>
                            <VBox styleClass="totales-box">
                                <Label text="Rendimiento Dólares" styleClass="label-total" />
                                <Label fx:id="gananciaPorcentajeDolaresLabel" styleClass="label-ganancia" />
                            </VBox>
                        </HBox>
                    </GridPane>
                </VBox>
                <HBox prefHeight="312.0" spacing="5" styleClass="card">
                    <TextField maxWidth="Infinity" prefHeight="41.0" prefWidth="265.0" promptText="Nombre" styleClass="text-input" HBox.hgrow="ALWAYS" />
                    <Button styleClass="button-primary" GridPane.rowIndex="1"
                            maxWidth="40" maxHeight="40" minWidth="40" minHeight="40">
                        <graphic>
                            <SVGPath content="M784-120 532-372q-30 24-69 38t-83 14q-109 0-184.5-75.5T120-580q0-109 75.5-184.5T380-840q109 0 184.5 75.5T640-580q0 44-14 83t-38 69l252 252-56 56ZM380-400q75 0 127.5-52.5T560-580q0-75-52.5-127.5T380-760q-75 0-127.5 52.5T200-580q0 75 52.5 127.5T380-400Z"
                                     scaleX="0.02" scaleY="0.02" fill="#fff"/>
                        </graphic>
                    </Button>

                </HBox>
            </HBox>

            <!--        TABLA DE FORMULARIOS DE INVERSIONES         -->
            <VBox styleClass="card" GridPane.columnSpan="2" GridPane.rowIndex="1">
                <fx:include fx:id="formularioInversion" source="PortafolioForm.fxml" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1" />
            </VBox>

            <!--        TABLE VIEW DE INVERSIONES AGRUPADAS          -->
            <VBox styleClass="card" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2">
                <Label styleClass="header-text" text="Cartera completa" />
                <Label styleClass="sub-header-text" />
                <TableView fx:id="tablaInversiones" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colInversionNombre" styleClass="nombre-columna" text="Nombre" />
                        <TableColumn fx:id="colInversionCantidad" text="Cantidad" />
                        <TableColumn fx:id="colPrecioAccionHoy" text="Precio Accion" />
                        <TableColumn fx:id="colPrecioAccion" text="Precio Promedio" />
                        <TableColumn fx:id="colTotalIncial" text="Total Incial" />
                        <TableColumn fx:id="colRendimientoPesos" text="Rendimiento" />
                        <TableColumn fx:id="colPrecioDolar" text="Precio Dolar" />
<!--                        <TableColumn fx:id="colTotalEnDolarInicial" text="Total Dolar Inicial" />-->
<!--                        <TableColumn fx:id="colRendimientoEnDolares" text="Variacion Dolares" />-->
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>


            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="20.0" />
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="80.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
            </rowConstraints>
        </GridPane>
    </center>
</BorderPane>
